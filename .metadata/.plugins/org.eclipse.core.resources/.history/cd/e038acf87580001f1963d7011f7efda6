package co.edu.uco.ucobet.domain;

import java.util.UUID;

import co.edu.uco.crosscutting.helpers.ObjectHelper;
import co.edu.uco.crosscutting.helpers.TextHelper;

public class StateDomain extends Domain {

	private String name;
	private CountryDomain country;
	
	protected StateDomain(final UUID id, final String name,final CountryDomain country) {
		super(id);
		setName(name);
		setCountry(country);
		// TODO Auto-generated constructor stub
	}
	
	public static final StateDomain create (final UUID id, final String name,final CountryDomain country){
		return new StateDomain(id, name, country);
	}
	
	public String getName() {
		return name;
	}

	private void setName(final String name) {
		this.name = TextHelper.applyTrim(name);
	}
	
	@Override
	public UUID getId() {
		return super.getId();
	}

	public CountryDomain getCountry() {
		return country;
	}

	public void setCountry(CountryDomain country) {
		this.country = ObjectHelper.getDefault(country, CountryDomain.create(getId(), name));
	}
	
	

}
